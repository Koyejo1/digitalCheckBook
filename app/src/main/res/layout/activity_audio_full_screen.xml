<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/mic_playingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Secret calling..."
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/mic_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/translucent_black"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <!--<com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/user_profile_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/rahaslogo"
                    app:siBorderAlpha="0.0"
                    android:padding="10dp"
                    app:siSquare="true" />-->

                <ImageView
                    android:id="@+id/selfie_image"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/eyes_moving" />

                <LinearLayout
                    android:id="@+id/loading_info_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mic_calling_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Secret calling..."
                        android:textColor="@color/colorPrimary"
                        android:textSize="45sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mic_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:text="Eranga"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
