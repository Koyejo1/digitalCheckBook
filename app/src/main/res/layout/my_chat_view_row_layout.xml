<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/chat_cam_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_border"
            android:padding="5dp">

            <ImageView
                android:id="@+id/chat_cam"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_mic_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/image_border"
            android:padding="5dp">

            <ImageView
                android:id="@+id/chat_mic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_margin="30dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/play_recording" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/chat_msg_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/not_my_message"
            android:padding="10dp"
            android:text="Hi This is a message"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/chat_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/chat_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/sender"
                android:layout_below="@+id/sender"
                android:gravity="center_vertical"
                android:text="11:00 AM"
                android:textColor="@color/android_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/chat_delivered"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:src="@drawable/tick_enabled" />

            <ImageView
                android:id="@+id/chat_pending"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:src="@drawable/tick_disabled" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>